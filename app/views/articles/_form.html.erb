<div class="container">
    <% if @art.errors.any? %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h4 class="alert-heading">The following errors :</h4>
            <ul>
            <% @art.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <%end%>
            </ul>
        </div>
    <% end %>
    
        
    <div class="row justify-content-center">
        <div class="col-10">
            <%= form_with(model: @art,class: "shadow p-3 mb-3 bg-info rounded",local: true) do |f| %>
                
                <div class="form-group row">
                    <%= f.label :title,class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control shadow rounded",placeholder:"Title of article" %>      
                    </div>      
                </div>
                        
                <div class="form-group row ">
                    <%= f.label :description,class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.text_area :description,rows: 10,class: "form-control shadow rounded",placeholder:"Description" %>      
                    </div>      
                </div>

                <div class="form-group row ">
                    <%= f.label :category,class: "col-2 col-form-label" %>
                    <div class="col-10">
                    <%= f.collection_select(:category_ids, Category.all, :id, :name,
                            {prompt: "Please Select categories(can be empty)"}, {multiple: true, size:3, class:"custom-select shadow rounded"}) %>
                    </div>      
                </div>

                <div class="form-group row justify-content-center">
                    <%=  f.submit class:"btn btn-outline-light btn-lg" %>
                </div>

            <% end %>
        </div>

        <%= link_to '[ cancel and back to article list ]',articles_path%>
    </div>
</div>