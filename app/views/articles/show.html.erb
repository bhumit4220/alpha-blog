<div id="page-content">
<div class="container">
        <div class="row justify-content-md-center">
            <div class="col-8 mt-4">
                <div class="card text-center mb-5 bg-white rounded">
                    <div class="card-header font-italic">
                        by Bhumit Bhadani
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"><%= @art.title %></h5>
                        <p class="card-text"><%= @art.description %></p>
                        <%= link_to "Edit",edit_article_path(@art),class:"btn btn-outline-info" %>
                        <%= link_to "Delete",article_path(@art),method: :Delete, data:{confirm: "are you sure?!"},class:"btn btn-outline-danger" %>
                        <%= link_to "Back", articles_path,class:"btn btn-outline-info"%>
                    </div>
                    <div class="card-footer text-muted">
                        <small>Created <%= time_ago_in_words(@art.created_at) %> ago,
                        Edited <%= time_ago_in_words(@art.updated_at) %> ago</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
</div>









