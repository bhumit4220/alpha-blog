<h1 class="text-center mt-4">Categories</h1>
<div class="container">
    <div class="apple_pagination">
        <%= will_paginate @cats, :container => false %>
    </div>
    <% @cats.each do |a| %>
        <div class="row justify-content-md-center">
            <div class="col-4 mt-4">
                <div class="card text-center mb-5 bg-white rounded">
                    <div class="card-body">
                        <h5 class="card-title"><%= link_to a.name,category_path(a),class: "text-success" %></h5>
                        <p class="card-text"><%=  pluralize(a.articles.count, "article") %></p>    
                    </div>
                    <div class="card-footer text-muted">
                        <small>Created <%= time_ago_in_words(a.created_at) %> ago,
                        Edited <%= time_ago_in_words(a.updated_at) %> ago</small>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
    <div class="apple_pagination">
        <%= will_paginate @cats, :container => false %>
    </div>
</div>